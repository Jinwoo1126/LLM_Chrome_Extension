{
  "manifest_version": 3,
  "name": "LLM Chat Extension",
  "version": "1.0",
  "description": "Chat with LLM through vLLM API",
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "marked.min.js",
        "highlight.min.js",
        "highlight.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
} 