{
  "manifest_version": 3,
  "name": "LLM Chat Extension",
  "version": "1.0",
  "description": "Chat with LLM through vLLM API",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "contextMenus",
    "windows",
    "http://localhost/*",
    "http://127.0.0.1:11434"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "marked.min.js",
        "highlight.min.js",
        "highlight.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "http://localhost/*",
    "http://127.0.0.1:11434"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}